class Bird():
    def __init__(self, x, y, w, h, color):
        self.x = x
        self.y = y
        self.w = w
        self.h = h
        self.color = color
        self.speed = 0

    def update(self):
        self.speed += 5
        self.y += self.speed

    def draw(self, screen):
        bird = pygame.Rect([self.x, self.y, self.w, self.h])
        pygame.draw.rect(screen, self.color, bird)
